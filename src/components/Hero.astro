---
interface Props {
  title: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
  imageSrc?: string;
}

const { 
  title = "Bienvenue sur notre site",
  description = "Découvrez nos services et solutions innovantes",
  ctaText = "En savoir plus",
  ctaLink = "/contact",
  imageSrc = "/images/hero-image.jpg"
} = Astro.props;
---

<!-- Vidéo de fond YouTube fixe -->
<div class="fixed inset-0 w-full h-full z-0 pointer-events-none overflow-hidden">
  <div class="absolute inset-0 w-full h-full">
    <iframe
      src="https://www.youtube.com/embed/-3sqBbC1moM?autoplay=1&mute=1&loop=1&playlist=-3sqBbC1moM&controls=0&showinfo=0&modestbranding=1&rel=0"
      title="LaBelleBrune vidéo ambiance"
      frameborder="0"
      allow="autoplay; encrypted-media"
      allowfullscreen
      style="position:absolute;top:50%;left:50%;width:150vw;height:150vh;min-width:150vw;min-height:150vh;transform:translate(-50%,-50%) scale(1.2);object-fit:cover;z-index:0;pointer-events:none;@media (max-width: 768px) {width:200vw;height:200vh;min-width:200vw;min-height:200vh;transform:translate(-50%,-50%) scale(1.5);}"
    ></iframe>
    <div class="absolute inset-0 bg-black/50"></div>
  </div>
</div>

<section class="relative min-h-screen flex items-center overflow-hidden">
  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <h1 class="text-5xl md:text-6xl font-bold text-white leading-tight">
          Bienvenue<br/>
          <span class="block mt-2 mb-4">chez LaBelleBrune</span>
        </h1>
        <h2 class="text-2xl md:text-3xl font-semibold text-white mb-2">
          Une bonne tasse de café,<br/>
          des plats faits maison<br/>
          & des boissons qui font voyager.
        </h2>
        <p class="text-lg md:text-xl text-yellow-200 font-medium mb-6">
          Café de spécialité & brunch
        </p>
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none z-0">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-purple-300 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
    <div class="absolute top-1/3 right-1/4 w-64 h-64 bg-yellow-300 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>
    <div class="absolute bottom-1/4 left-1/3 w-64 h-64 bg-pink-300 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-4000"></div>
  </div>
</section>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  .animate-blob {
    animation: blob 7s infinite;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style> 