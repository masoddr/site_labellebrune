---
interface Props {
  title?: string;
  address?: string;
  mapUrl?: string;
}

const { title, address, mapUrl } = Astro.props;
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-xl text-gray-600">
        {address}
      </p>
    </div>
    
    <div class="w-full h-[500px] rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300">
      <iframe 
        src={mapUrl}
        width="100%" 
        height="100%" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
        class="rounded-2xl"
        title="Carte Google Maps"
      ></iframe>
    </div>
  </div>
</section> 