---
const plats = [
  { src: '/plat_1.jpg', webp: '/plat_1.webp', alt: 'Plat 1' },
  { src: '/plat_2.jpg', webp: '/plat_2.webp', alt: 'Plat 2' },
  { src: '/plat_3.jpg', webp: '/plat_3.webp', alt: 'Plat 3' },
  { src: '/plat_4.jpg', webp: '/plat_4.webp', alt: 'Plat 4' },
];
---

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;700&display=swap" rel="stylesheet">

<section class="relative py-12 z-10">
  <div class="container mx-auto px-4 max-w-4xl">
    <div class="bg-[#363d36] rounded-2xl shadow-lg overflow-hidden" style="font-family: 'Poppins', sans-serif;">
      <h2 class="text-2xl md:text-3xl font-bold text-white text-center py-6">Nos plats maison</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 p-6">
        {plats.map((plat, idx) => (
          <div class="overflow-hidden rounded-2xl shadow-md transition-transform duration-300 hover:scale-105 bg-[#2c2c2c]">
            <picture>
              <source srcset={plat.webp} type="image/webp" />
              <img src={plat.src} alt={plat.alt} width="320" height="320" class="w-full h-40 md:h-56 object-cover rounded-2xl" loading="lazy" />
            </picture>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 