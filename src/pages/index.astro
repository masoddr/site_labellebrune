---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import Map from '../components/Map.astro';
import { defaultConfig } from '../config/site';
import TestimonialsCarousel from '../components/TestimonialsCarousel.astro';
import PlatsCarousel from '../components/PlatsCarousel.astro';
---

<BaseLayout>
	<Header />
	<main>
		<Hero 
			title="Transformez vos idées en réalité"
			description="Nous créons des solutions web innovantes et performantes pour propulser votre entreprise vers le succès."
			ctaText="Démarrer un projet"
			ctaLink="/contact"
			imageSrc="/images/hero-illustration.svg"
		/>
		<PlatsCarousel />
		<TestimonialsCarousel />
		<Map 
			title={defaultConfig.location.title}
			address={defaultConfig.location.address}
			mapUrl={defaultConfig.location.mapUrl}
		/>
	</main>
	<Footer />
</BaseLayout>
