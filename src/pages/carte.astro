---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <Header />
  <main class="min-h-screen py-12 bg-[#5a3e1b]">
    <h1 class="text-4xl md:text-5xl font-bold text-center text-white mb-10">La carte</h1>
    <div class="container mx-auto px-4">
      <div class="grid gap-8 grid-cols-1 md:grid-cols-2">
        <img src="/carte_1.png" alt="Carte page 1" class="w-full rounded-xl shadow-lg bg-white p-2 object-contain" loading="lazy" />
        <img src="/carte_2.png" alt="Carte page 2" class="w-full rounded-xl shadow-lg bg-white p-2 object-contain" loading="lazy" />
        <img src="/carte_3.png" alt="Carte page 3" class="w-full rounded-xl shadow-lg bg-white p-2 object-contain" loading="lazy" />
        <img src="/carte_4.png" alt="Carte page 4" class="w-full rounded-xl shadow-lg bg-white p-2 object-contain" loading="lazy" />
        <img src="/carte_5.png" alt="Carte page 5" class="w-full rounded-xl shadow-lg bg-white p-2 object-contain md:col-span-2" loading="lazy" />
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout> 